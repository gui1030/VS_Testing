- content_for :item_image do
  = link_to account do
    = image_tag(account.logo.url(:thumb), class: 'avatar-thumb') if account.logo.present?
- content_for :item_title do
  = link_to account.name, account
- content_for :actions do
  = edit_button(account)
  = destroy_button(account)
= label_group 'Issues' do
  - if account.alerts?
    .tag.tag-danger
      %i.fa.fa-exclamation-triangle
      = account.alerts_count
  - else
    .tag.tag-success
      %i.fa.fa-check
      0
